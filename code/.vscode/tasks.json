{

    // See https://go.microsoft.com/fwlink/?LinkId=733558 

    // for the documentation about the tasks.json format

    "version": "2.0.0",

    "tasks": [
        {
            "type": "shell",

            "label": "g++.exe build active file",
            "command": "g++",
            "args": [
                "-g",
                "${file}",
                "-o",
                "${fileDirname}\\${fileBasenameNoExtension}.exe",

                "-IC:/SFML-2.5.1/include",
                "-LC:/SFML-2.5.1/lib",
                "-lsfml-graphics",
                "-lsfml-audio",
                "-lsfml-window",
                "-lsfml-system"
            ],
            "options": {
                "cwd": "C:\\MinGW\\bin"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }

        }

    ]

}